{
   "env": {
      "node": true,
      "commonjs": true,
      "es2021": true
   },
   "extends": "eslint:recommended",
   "parserOptions": {
      "ecmaVersion": 12
   },
   "rules": {
      "indent": ["error", 3],
      "linebreak-style": ["error", "windows"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-unused-vars": ["warn"]
   }
}
